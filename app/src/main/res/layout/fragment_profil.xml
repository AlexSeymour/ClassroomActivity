<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexseymour.classroomactivity.ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Votre profil" />


        <TextView
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:text="@string/user_login"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle" />
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_login"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/preferences_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image"
            android:layout_centerHorizontal="true"
            android:hint="Changez de mot de passe"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/preferences_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preferences_password"
            android:layout_centerHorizontal="true"
            android:hint="Confirmer votre mot de passe"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/confirm_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmez"
            android:layout_below="@+id/preferences_password_confirm"
            android:layout_centerInParent="true"
            />



    </RelativeLayout>


</FrameLayout>
